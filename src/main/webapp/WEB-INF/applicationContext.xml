<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="
		http://www.springframework.org/schema/mvc
		http://www.springframework.org/schema/mvc/spring-mvc-3.0.xsd
		http://www.springframework.org/schema/beans
		http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
		http://www.springframework.org/schema/context
		http://www.springframework.org/schema/context/spring-context-3.0.xsd" >

	<!--
	<mvc:annotation-driven />
  -->

	<context:component-scan base-package="net.neobp.ticketstack" />

	<bean id="dataSource" class="org.apache.commons.dbcp.BasicDataSource" destroy-method="close">
		<property name="driverClassName" value="org.postgresql.Driver"/>
		<property name="url" value="jdbc:postgersql://localhost/Ticketstack"/>
		<!--
		<property name="username" value="${jdbc.username}"/>
		<property name="password" value="${jdbc.password}"/>
		-->
	</bean>

	<!--
	<bean id="ticketEntryDao" class="net.neobp.ticketstack.TicketEntryDaoImpl">
		<constructor-arg ref="dataSource"/>
	</bean>
    
	<bean id="ticketstackServlet" class="net.neobp.ticketstack.TicketEntryResource">
		<constructor-arg ref="ticketEntryDao"/>
	</bean>
  -->
</beans>
