<mvc:View
	displayBlock="true"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns="sap.m"
	controllerName="ticketstack.controller.App"
	>
	
    <!-- 
			<Page title="openSAP - Developing with SAPUI5">
				        items="{ path: '/TicketList/tickets', sorter: { path: 'prio' } }"
				        items="{ path: '{/tickets}', sorter: { path: 'prio' } }"
				        rows="{/tickets}"
     -->
	<App>
		<pages>
			<Page>
				<content>
				    <Table
				        id="ticketsTable"
				        items="{/tickets}"
				        title="{title}"
				        selectionMode="MultiToggle"
				        visibleRowCount="4" >
				        
				        <columns>
				            <Column width="5%">
				                <Text text="Up" />
				            </Column>
				            <Column width="5%">
				                <Text text="Down" />
				            </Column>
				            <Column width="10%">
				                <Text text="Ticket" />
				            </Column>
				            <Column width="auto">
				                <Text text="Text" />
				            </Column>
				            <Column width="5%">
				                <Text text="Delete" />
				            </Column>
				        </columns>

				        <items>
				            <ColumnListItem>
				                <cells>
				                    <Button text="Up" press="onUpClicked" />
				                    <Button text="Down" press="onDownClicked" />
				                    <Link text="{ticket}" target="_blank" href="https://support.neo-business.info/browse/{ticket}"/>
				                    <Text text="{text}"/>
				                    <Button text="Del" press="onDelClicked" />
				                </cells>
				            </ColumnListItem>
				        </items>
				    </Table>
				</content>
			</Page>
		</pages>
	</App>
</mvc:View>
